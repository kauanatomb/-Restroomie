<div class="container mapboxgl-map">
  <h1>Welcome to your Dashboard <%= current_user.username %>!</h1>
  <hr>
  <div>
  <h2>Your restrooms:</h2>
  <ul class="container-fluid">
    <% if @restrooms.empty? %>
      <p>No restrooms created.</p>
    <% else %>
      <% @restrooms.each do |restroom| %>
        <%= link_to restroom_path(restroom), class: "bookmark-button" do %>
          <div class="mb-4 restroom-card" style="max-height: 150px;">
            <% restroom = Restroom.find_by(id: restroom.id) %>
            <div class="d-flex" style="max-height: 150px;">
              <div class="col-md-4">
                <% if restroom.photo.attached? %>
                  <%= cl_image_tag restroom.photo.key, class: 'card-img-top', height: 160, width: 160, crop: :fill %>
                <% elsif restroom.photos.present? %>
                  <%= cl_image_tag restroom.photos.first.key, class: "img-square-wrapper", height: 160, width: 160, crop: :fill %>

                <% else %>
                  <p>No Image Available</p>
                <% end %>
              </div>
              <div class="card-body m-0" style="height: 150px;">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="card-title"><%= restroom.name %></h5>
                </div>
                <% if restroom.reviews.present? %>
                  <% average_rating = restroom.reviews.pluck(:rating).sum / restroom.reviews.count.to_f %>
                  <% average_rating.round.times do %>
                    <i class="fa-solid fa-star"></i>
                  <% end %>
                <% else %>
                  <p class="card-text">No reviews available.</p>
                <% end %>
                <p class="card-text">
                  <% if restroom.pricing %>
                    <i class="fas fa-euro"></i> <%= restroom.pricing %>
                  <% else %>
                    <div class="d-flex align-items-center">
                      <i class="fas fa-euro"></i>
                      <p class="ml-2 mb-0">Free</p>
                    </div>
                  <% end %>
                </p>
                <% if restroom.accessibility && restroom.baby_friendly %>
                  <div class="d-flex">
                    <p class="card-text"><i class="fa-solid fa-wheelchair"></i></p>
                    <p class="card-text"><i class="fa-solid fa-baby"></i></p>
                  </div>
                <% elsif restroom.accessibility %>
                  <p class="card-text mr-auto"><i class="fa-solid fa-wheelchair"></i> Accessible</p>
                <% elsif restroom.baby_friendly %>
                  <p class="card-text"><i class="fa-solid fa-baby"></i> Baby Friendly</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
<hr>
<div>
  <h2>Your reviews:</h2>
    <% if @reviews.empty? %>
      <p>No reviews created.</p>
    <% else %>
      <% @reviews.each do |review| %>
        <%= render "review_card", review: review %>
      <% end %>
    <% end %>
</div>
