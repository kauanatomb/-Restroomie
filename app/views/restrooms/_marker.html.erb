<% if restroom.baby_friendly? && restroom.accessibility == false %>
  <%= image_tag "pointer baby.png",
    height: 54,
    width: 43,
    alt: "pointer",
    data: { url: restroom_path(id: restroom_id), action: "click->replace#replace" } %>
<% elsif restroom.accessibility? && restroom.baby_friendly == false %>
  <%= image_tag "pointer acc.png",
    height: 54,
    width: 43,
    alt: "pointer",
    data: { url: restroom_path(id: restroom_id), action: "click->replace#replace" } %>
<% elsif restroom.accessibility? && restroom.baby_friendly? %>
  <%= image_tag "pointer both.png",
    height: 54,
    width: 43,
    alt: "pointer",
    data: { url: restroom_path(id: restroom_id), action: "click->replace#replace" } %>
<% else %>
  <%= image_tag "pointer (pastel blue).png",
    height: 54,
    width: 43,
    alt: "pointer",
    data: { url: restroom_path(id: restroom_id), action: "click->replace#replace" } %>
<% end %>
